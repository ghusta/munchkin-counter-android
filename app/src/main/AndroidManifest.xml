<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datarockets.mnchkn">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MunchkinCounterTheme"
        android:name=".MunchkinApplication">


        <instrumentation
            android:name="android.test.InstrumentationTestRunner"
            android:targetPackage="com.datarockets.mnchkn"/>

        <activity android:name="com.mixpanel.android.surveys.SurveyActivity"
            android:theme="@style/com_mixpanel_android_SurveyActivityTheme"/>

        <activity
            android:theme="@style/SplashScreenTheme"
            android:name=".ui.SplashScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name="com.datarockets.mnchkn.ui.onboard.OnboardActivity"/>
        <activity
            android:label="@string/title.players_editor"
            android:name=".ui.playerslist.PlayersListActivity"/>
        <activity android:name="com.datarockets.mnchkn.ui.chooser.ChooseGameActivity"/>
        <activity android:screenOrientation="portrait" android:name=".ui.dashboard.DashboardActivity"/>
        <activity
            android:label="@string/title.analytics"
            android:name="com.datarockets.mnchkn.ui.result.GameResultActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"/>
        <activity
            android:label="@string/title.settings"
            android:name="com.datarockets.mnchkn.ui.settings.SettingsActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"/>

    </application>

</manifest>
